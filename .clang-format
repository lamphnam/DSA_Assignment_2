# Line breaking and template formatting
AlwaysBreakTemplateDeclarations: Yes
AllowShortFunctionsOnASingleLine: Empty
BinPackParameters: true
BinPackArguments: true
ColumnLimit: 120

# Spacing for operators and literals
SpaceAfterCStyleCast: false
SpaceBeforeAssignmentOperators: true
SpaceBeforeParens: false  # Changed to false to remove space before if parentheses
SpacesInAngles: false
SpacesInParentheses: false
SpacesInSquareBrackets: false
SpaceAfterLogicalNot: false
SpaceBeforeSquareBrackets: false
SpaceInEmptyParentheses: false
SpacesInContainerLiterals: false

# Special handling for floating point literals
BitFieldColonSpacing: Both
SpaceAroundPointerQualifiers: Default
SpacesInConditionalStatement: false

# Indentation
IndentWidth: 4
AccessModifierOffset: -4
ContinuationIndentWidth: 4

# Template specific
SpaceAfterTemplateKeyword: true

# Control statement formatting
AllowShortIfStatementsOnASingleLine: AllIfsAndElse  # Changed to allow all if-else on single line
AllowShortBlocksOnASingleLine: Empty
BreakBeforeBraces: Attach
MaxEmptyLinesToKeep: 1
SeparateDefinitionBlocks: Always
AllowShortCaseLabelsOnASingleLine: true