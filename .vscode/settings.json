{
    // Giữ lại các cài đặt hiện có của bạn
    "files.exclude": {
        "**/build": true,
        "**/out": true,
        "**/bin": true,
        "**/obj": true,
        "**/vendor": true
    },
    "search.exclude": {
        "**/build": true,
        "**/out": true,
        "**/bin": true,
        "**/obj": true,
        "**/vendor": true
    },
    "editor.formatOnSave": false,
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_path": "C:\\Program Files\\LLVM\\bin\\clang-format.exe",
    "C_Cpp.errorSquiggles": "enabled",
    // Thay đổi IntelliSense engine
    "C_Cpp.intelliSenseEngine": "default", // Thay đổi từ "Tag Parser" sang "default"
    // Thêm các cài đặt mới để fix vấn đề this. -> this->
    "C_Cpp.suggestSnippets": true,
    "C_Cpp.autocomplete": "default",
    "C_Cpp.intelliSenseUpdateDelay": 500,
    "C_Cpp.autocompleteAddParentheses": true,
    // Giữ lại phần còn lại của cài đặt của bạn
    "C_Cpp.silentCompile": true,
    "C_Cpp.autoAddFileAssociations": true,
    "C_Cpp.intelliSenseEngineFallback": "Enabled",
    "C_Cpp.default.compilerPath": "C:\\Path\\To\\Your\\Compiler\\g++.exe",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "C:/Path/To/Your/Includes/**"
    ],
    "C_Cpp.default.defines": [
        "MY_DEFINE"
    ],
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c17",
    "files.associations": {
        "filesystem": "cpp",
        "vector": "cpp",
        "xhash": "cpp",
        "xstring": "cpp",
        "xlocale": "cpp",
        "stdexcept": "cpp",
        "iostream": "cpp",
        "source_location": "cpp",
        "xutility": "cpp",
        "ostream": "cpp"
    }
}